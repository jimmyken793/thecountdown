
<div id="create_countdown_table_cont">
	<div class="row">
		<div class="col-md-offset-3 col-md-2">
			<%= label_tag(:title, "倒數標題") %>
		</div>
		<div class="col-md-3">
			<%= text_field_tag(:title, "", :id=>"title") %>
		</div>
	</div>
	<div class="row">
		<div class="col-md-offset-3 col-md-2">
			<%= label_tag(:end_title, "結束時的標題") %>
		</div>
		<div class="col-md-3">
			<%= text_field_tag(:end_title, "", :id => "end_title") %>
		</div>
	</div>
	<div class="row">
		<div class="col-md-offset-3 col-md-2">
			<%= label_tag(:time, "目標時間") %>
		</div>
		<div class="col-md-4">
			<div id="datetimepicker" class="input-append date">
				<input data-format="yyyy/MM/dd hh:mm:ss" type="text" id="time"></input>
				<span class="add-on">
					<i data-time-icon="icon-time" data-date-icon="icon-calendar">
					</i>
				</span>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-offset-5 col-md-1">
			<%= submit_tag("建立", :id=>"btn_create") %>
		</div>
	</div>
</div>
<script type="text/javascript">
function goto_countdown(){
	var location = "/" + 
		encodeURIComponent($("#title").val()) +
		"/" + 
		encodeURIComponent($("#end_title").val()) +
		"/" + 
		encodeURIComponent($('#datetimepicker').data('datetimepicker')._date.getTime()/1000);
	console.log(location);
	window.location = location;
}
$(function() {
	$("#btn_create").click(goto_countdown);
	$('#datetimepicker').datetimepicker({
	  language: 'zh-TW',
	  maskInput: true,           // disables the text input mask
	  startDate: new Date(),      // set a minimum date
	});
});
</script>